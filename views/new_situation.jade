    //   minChars: 2,
    //   matchCase: false,
    //   selectedItemProp: 'title',
    //   selectedValuesProp: 'id'
    // });
    $('#causes').autoSuggest('/suggest/', {
      asHtmlID: 'causes_list',
      startText: 'Add a cause',
      minChars: 2,
      matchCase: false, 
      selectedValuesProp: 'id'
    });
    $('#effects').autoSuggest('/suggest/', {
      asHtmlID: 'effects_list',
      minChars: 2,
      startText: 'Add an effect',
      matchCase: false, 
      selectedValuesProp: 'id'
    });
  });
